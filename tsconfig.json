{
"include": [
    "src/**/*"
],
"exclude": [
    "node_modules",
    "**/*.spec.ts"
],
"compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution" : "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck":true,
    "paths" : {
        "*" : [
            "node_modules/*",
            "src/*"
        ]
    }
},
}
